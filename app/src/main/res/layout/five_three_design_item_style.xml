<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/three_design_image_radius"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_right_top"
        app:layout_constraintBottom_toBottomOf="@id/card_right_bottom"
        app:layout_constraintEnd_toStartOf="@+id/card_right_top"
        android:id="@+id/card_left"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintHeight_default="percent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <include android:id="@+id/include_left" layout="@layout/view_image_with_text"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:layout_constraintVertical_chainStyle="packed"
        app:cardCornerRadius="@dimen/three_design_image_radius"
        app:cardElevation="0dp"
        android:layout_marginStart="@dimen/three_design_image_gap"
        app:layout_constraintStart_toEndOf="@id/card_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/card_right_bottom"
        android:id="@+id/card_right_top"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <include android:id="@+id/include_right_top" layout="@layout/view_image_with_text"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/three_design_image_radius"
        app:cardElevation="0dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars"
        android:layout_marginTop="@dimen/three_design_image_gap"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintStart_toStartOf="@id/card_right_top"
        app:layout_constraintEnd_toEndOf="@id/card_right_top"
        app:layout_constraintTop_toBottomOf="@id/card_right_top"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/card_right_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <include android:id="@+id/include_right_bottom" layout="@layout/view_image_with_text"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>